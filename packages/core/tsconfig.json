{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./lib",
        "lib": [
            "es2017", "es2020"
        ]
    },
    "exclude": [
        "**/node_modules",
        "**/lib",
        "**/test"
    ]
}